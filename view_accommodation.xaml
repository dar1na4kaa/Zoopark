<Page x:Class="Zoo.view_accommodation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Zoo"
      mc:Ignorable="d" 
       d:DesignHeight="325" d:DesignWidth="425"
      Title="view_accommodation">

    <Grid>
        <ListView x:Name="listview"   FontFamily="Bahnschrift Light"  BorderBrush="Black" Foreground="#FF043BCC" Margin="0,20" Height="400">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=number_rooms}" Header="№ Помещения" Width="212"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=count_animal}" Header="Количество животных" Width="212"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
